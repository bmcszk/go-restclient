Content-Type: application/json

{
  "order": {
    "id": "ORD-12345",
    "customer": {
      "name": "Test Customer",
      "address": {
        "street": "123 Test St",
        "city": "Test City",
        "zip": "12345"
      }
    },
    "items": [
      {
        "id": "ITEM-1",
        "name": "Product 1",
        "quantity": 2,
        "price": 19.99
      },
      {
        "id": "ITEM-2",
        "name": "Product 2",
        "quantity": 1,
        "price": 29.99
      }
    ]
  }
}
